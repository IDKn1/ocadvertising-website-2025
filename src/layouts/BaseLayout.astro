---
const { title = "Grads 2025" } = Astro.props;
import { ClientRouter } from "astro:transitions";
import NavBar from "../components/NavBar.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/style.css" />
    <ClientRouter />
  </head>
  <body>
    <NavBar />

    <slot name="full-bleed" />
    <div class="wrapper">
      <slot />
    </div>
    <footer class="footer">
      &copy; 2025 OCADU Advertising. All rights reserved.
    </footer>
  </body>
</html>
